<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/com.hangdian.chanxue"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/z_background"
    android:orientation="vertical" >
    <include  
        layout="@layout/top">
    </include>  
    <RelativeLayout 
        android:id="@+id/wait"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_width="match_parent">
       
  	  <ProgressBar
      	  android:id="@+id/progressBar"
      	  style="@style/loading_large"
      	  android:layout_centerInParent="true"
      	  android:visibility="visible" />
    </RelativeLayout>
   
    <com.itboye.guangda.view.NoScrollViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.itboye.guangda.view.NoScrollViewPager>
    <View 
       	android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/bg_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/danghangbeijing"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ic_tab_one"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:src="@drawable/shouye" >
            </ImageView>
            <TextView
                android:id="@+id/tex_tab_one"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/tab_text_sel"
                android:text="首页"
                >
            </TextView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/tab_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ic_tab_two"
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                 android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/gouwu_un" >
            </ImageView>
            <TextView
                android:id="@+id/tex_tab_two"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/tab_text"
                android:text="生活"
                >
            </TextView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/tab_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ic_tab_three"
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                android:layout_weight="1"
                 android:layout_marginTop="5dp"
                android:src="@drawable/jinrong_un" >
            </ImageView>
            <TextView
                android:id="@+id/tex_tab_three"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/tab_text"
                android:text="金融"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_four"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ic_tab_four"
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:src="@drawable/geren_un" >
            </ImageView>
            <TextView
                android:id="@+id/tex_tab_four"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/tab_text"
                android:text="个人"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>