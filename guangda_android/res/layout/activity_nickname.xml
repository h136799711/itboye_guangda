<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <include
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rl_padding"
        android:layout_marginRight="@dimen/rl_padding"
        android:layout_marginTop="5dp"
        android:background="@color/white" >
         <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="30dp"
            android:text="昵称修改"
            android:textColor="@color/lightpink"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView0"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:hint="请输入您的昵称"
            android:textSize="@dimen/text_size_13" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@+id/et_nickname"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:text="您的姓名"
            android:layout_marginTop="5dp"
            android:textColor="@color/lightpink"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_true_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:hint="请输入您的姓名"
            android:textSize="@dimen/text_size_13" >

            <requestFocus />
        </EditText>
        

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_true_name"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:text="身份证号"
            android:textColor="@color/lightpink"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_shenfen_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:hint="请输入您的身份证号"
            android:textSize="@dimen/text_size_13" />
        
        
       <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_shenfen_number"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:text="手机号"
            android:textColor="@color/lightpink"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_shoujihao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:hint="请输入您的手机号"
            android:textSize="@dimen/text_size_13" />
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_shoujihao"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:text="银行卡号"
            android:textColor="@color/lightpink"
            android:textSize="@dimen/text_size_16" />

       <EditText
            android:id="@+id/et_yinhangka"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="@dimen/et_padding"
            android:layout_marginRight="@dimen/et_padding"
            android:layout_marginTop="5dp"
            android:hint="请输入您的光大银行卡号"
            android:textSize="@dimen/text_size_13" />
        
    </RelativeLayout>

    <Button
        android:id="@+id/btn_xiugai"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/purple"
        android:text="确认修改"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
