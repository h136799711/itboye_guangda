<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:id="@+id/mainLayout"
    android:background="@color/white"
    android:orientation="vertical" >
    

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal" >

      <FrameLayout
          android:id="@+id/frameLayout1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal" >

          <com.itboye.guangda.view.CircleImg  
              android:id="@+id/head"
              android:layout_gravity="center_horizontal"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_marginTop="20dp"
              android:src="@drawable/logo" />
      </FrameLayout>

      <ImageView
          android:id="@+id/xiugai"
          android:layout_width="wrap_content"
          android:layout_height="32dp"
          android:layout_alignBottom="@+id/frameLayout1"
          android:layout_alignParentStart="true"
          android:layout_marginBottom="-10dp"
          android:layout_marginStart="70dp"
          android:src="@drawable/xiugai" />
  </RelativeLayout>

  <TextView
      android:id="@+id/mingzhi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:text="登录与注册"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dp"
      android:textSize="@dimen/text_size_14" />
     <ImageView
              android:layout_gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_marginTop="15dp"
              android:src="@drawable/beijing" />
	<GridLayout 
	  android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:rowCount="2"
      android:columnCount="1"
      android:id="@+id/root">  
     <LinearLayout
         	android:weightSum="3"
         	android:layout_marginLeft="5dp"
         	android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

			<ImageView
			    android:background="@drawable/geren_shape1"
			    android:adjustViewBounds="true"
			    android:id="@+id/shaomiao"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:src="@drawable/youhuima" />

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/kajuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/kajuan" />

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/kefu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/kefu" />
        </LinearLayout>
        <LinearLayout
            
            android:weightSum="3"
            android:layout_marginLeft="5dp"
         	android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
			<ImageView
                android:id="@+id/mima"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sezhi" />

            <ImageView
                android:id="@+id/guanyu"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/guanyu" />

            <ImageView
                android:id="@+id/tuichu"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tuichu" />
        </LinearLayout>
	    
	</GridLayout>
    
    
    

</LinearLayout>
