<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
           android:layout_height="26dp"
           android:src="@drawable/haitao"/>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/leftandright"
        android:orientation="vertical">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image21"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />
       
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/leftandright"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="7"
             >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/image22"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                 />

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/picture_paddingtop"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/image23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                   />

                <com.android.volley.toolbox.NetworkImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/image24"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>
        </LinearLayout>
         <ImageView
           android:layout_width="match_parent"
           android:layout_height="26dp"
           android:src="@drawable/dujia"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/picture_paddingtop"
           style="@style/leftandright"
           android:orientation="vertical">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
           />
       
    </LinearLayout>
      <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            style="@style/leftandright"
            android:orientation="horizontal" >

            <com.android.volley.toolbox.NetworkImageView
                android:layout_weight="1"
                 android:id="@+id/image26"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:adjustViewBounds="true"
                 />

             <com.android.volley.toolbox.NetworkImageView
                 android:layout_marginStart="5dp"
                 android:adjustViewBounds="true"
                 android:id="@+id/image27"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                />
             <com.android.volley.toolbox.NetworkImageView
                  android:layout_marginStart="5dp"
                 android:layout_weight="1"
                 android:adjustViewBounds="true"
                 android:id="@+id/image28"
                  android:layout_width="0dp"
                 android:layout_height="wrap_content"
             />
             
            </LinearLayout>
          <ImageView
            android:layout_width="match_parent"
           android:layout_height="26dp"
           android:src="@drawable/tehui"/>
      <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/picture_paddingtop"
             style="@style/leftandright"
             android:weightSum="9"
             android:orientation="horizontal">

         <com.android.volley.toolbox.NetworkImageView
             android:id="@+id/image29"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="4"
             android:adjustViewBounds="true"
             />

         <LinearLayout
             android:layout_weight="5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="5dp"
             android:orientation="vertical" >

             <com.android.volley.toolbox.NetworkImageView
                 android:id="@+id/image210"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:adjustViewBounds="true"
                />

             <com.android.volley.toolbox.NetworkImageView
                 android:adjustViewBounds="true"
                 android:layout_marginTop="5dp"                 
                 android:id="@+id/image211"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
               />
             <com.android.volley.toolbox.NetworkImageView
                 android:adjustViewBounds="true"
                 android:id="@+id/image212"
                 android:layout_marginTop="5dp" 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
               />
             
            </LinearLayout>
    
      </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
           android:layout_height="26dp"
           android:adjustViewBounds="true"
           android:src="@drawable/chuxing"/>
       <LinearLayout 
           android:layout_marginTop="@dimen/picture_paddingtop"
           android:layout_marginBottom="12dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/leftandright"
           android:orientation="vertical">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image213"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
          />
       
    </LinearLayout>
     <ImageView
            android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/hengxian"/>
 </LinearLayout> 
</ScrollView>
